<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerHome"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </androidx.viewpager2.widget.ViewPager2>

    <TextView
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME TO SPACEX"
        android:textSize="30dp"
        android:layout_below="@id/viewPagerHome"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/companyFounder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyName"
        android:layout_marginTop="30dp"
        android:text="Founder: "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="3dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <TextView
        android:id="@+id/companyCEO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyFounder"
        android:layout_marginTop="10dp"
        android:text="CEO: "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="3dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <TextView
        android:id="@+id/companyCOO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyCEO"
        android:layout_marginTop="10dp"
        android:text="COO: "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="3dp"
        android:layout_marginLeft="10dp">
    </TextView>
    <TextView
        android:id="@+id/companyEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyCOO"
        android:layout_marginTop="10dp"
        android:text="Employees: "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="3dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <TextView
        android:id="@+id/companySummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyEmp"
        android:layout_marginTop="10dp"
        android:text="Summary: "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="3dp"
        android:layout_marginLeft="10dp">
    </TextView>

    <TextView
        android:id="@+id/companyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companySummary"
        android:layout_marginTop="10dp"
        android:text="Address: "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="3dp"
        android:layout_marginLeft="10dp">
    </TextView>
</RelativeLayout>
</ScrollView>