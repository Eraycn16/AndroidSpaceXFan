<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:id="@+id/cardRocket">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="3dp">

        <ImageView
            android:id="@+id/imageRocket"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/rocket"
            android:layout_centerVertical="true">
        </ImageView>

        <TextView
            android:id="@+id/nameRocket"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:layout_toRightOf="@id/imageRocket"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_centerVertical="true">
        </TextView>

        <ImageButton
            android:id="@+id/btnRocketFav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fav_empty"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/nameRocket"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp">
        </ImageButton>

    </RelativeLayout>

</androidx.cardview.widget.CardView>