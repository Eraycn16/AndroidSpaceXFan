<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpcomingDetailPage"
    android:background="@color/white">

    <ImageView
        android:id="@+id/upcomingDetailImage"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rocket"
        android:layout_marginTop="10dp">
    </ImageView>

    <TextView
        android:id="@+id/upcomingDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcomingDetailImage"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="NAME">
    </TextView>

    <TextView
        android:id="@+id/upcomingDetailDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcomingDetailName"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="Date: ">
    </TextView>

    <TextView
        android:id="@+id/upcomingDetailFN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcomingDetailDate"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="Flight Number: ">
    </TextView>

    <TextView
        android:id="@+id/upcomingDetailInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcomingDetailFN"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="Information: ">
    </TextView>

</RelativeLayout>